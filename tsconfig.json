{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2019"],
    "module": "CommonJS",
    "rootDir": "src",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {},
    "resolveJsonModule": true,
    "outDir": "dist",
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
